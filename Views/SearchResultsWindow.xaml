<Window x:Class="TID3.Views.SearchResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TID3"
        mc:Ignorable="d"
        Title="MusicBrainz Search Results" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        d:DesignHeight="600" d:DesignWidth="800">

    <Window.Resources>
        <!-- Reuse the same modern styles -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF252526"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#35FFFFFF"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Backdrop blur simulation -->
                            <Border x:Name="BackdropElement"
                                    CornerRadius="14"
                                    Background="#08FFFFFF"
                                    Margin="-2">
                                <Border.Effect>
                                    <BlurEffect Radius="4"/>
                                </Border.Effect>
                            </Border>
                            
                            <!-- Main frosted glass surface -->
                            <Border x:Name="BorderElement"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12"
                                    Padding="{TemplateBinding Padding}"
                                    Background="#28FFFFFF">
                                <Border.Effect>
                                    <DropShadowEffect Color="#40000000" 
                                                      Direction="270" 
                                                      ShadowDepth="4" 
                                                      BlurRadius="12" 
                                                      Opacity="0.25"/>
                                </Border.Effect>
                            </Border>
                            
                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="#38FFFFFF"/>
                                <Setter TargetName="BorderElement" Property="BorderBrush" Value="#45FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BorderElement" Property="Background" Value="#18FFFFFF"/>
                                <Setter TargetName="BorderElement" Property="BorderBrush" Value="#25FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResultItem" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="MusicBrainz Search Results" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Results List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ResultsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ResultItem}" 
                                MouseLeftButtonUp="ResultItem_Click"
                                Tag="{Binding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Title}" 
                                              FontWeight="Bold" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding Score, StringFormat=' (Score: {0})'}" 
                                              Foreground="{StaticResource SubTextBrush}"
                                              Margin="8,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" 
                                          Text="{Binding Artist}" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          Margin="0,4,0,0"/>

                                <TextBlock Grid.Row="2" 
                                          Text="{Binding Date}" 
                                          Foreground="{StaticResource SubTextBrush}"
                                          Margin="0,4,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Select" 
                    Click="Select_Click" 
                    Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel" 
                    Click="Cancel_Click" 
                    Style="{StaticResource ModernButton}"
                    Background="#FF6C757D"/>
        </StackPanel>
    </Grid>
</Window>
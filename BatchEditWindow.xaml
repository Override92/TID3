<Window x:Class="TID3.BatchEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TID3"
        mc:Ignorable="d"
        Title="Batch Tag Editor" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        d:DesignHeight="700" d:DesignWidth="900">

    <Window.Resources>
        <!-- Modern Dark Theme Styles -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="SubTextBrush" Color="#FFCCCCCC"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF252526"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="4,8,4,4"/>
        </Style>

        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Batch Tag Editor" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Batch Edit Form -->
            <ScrollViewer Grid.Column="0" Style="{StaticResource ModernScrollViewer}">
                <StackPanel>
                    <TextBlock Text="Batch Edit Settings" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextBrush}"
                              Margin="0,0,0,12"/>

                    <TextBlock Text="Only fields with checked boxes will be updated for all selected files."
                              Foreground="{StaticResource SubTextBrush}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,16"/>

                    <!-- Album -->
                    <CheckBox x:Name="UpdateAlbumCheck" Content="Update Album" Style="{StaticResource ModernCheckBox}"/>
                    <TextBox x:Name="AlbumTextBox" Style="{StaticResource ModernTextBox}" 
                            IsEnabled="{Binding ElementName=UpdateAlbumCheck, Path=IsChecked}"/>

                    <!-- Album Artist -->
                    <CheckBox x:Name="UpdateAlbumArtistCheck" Content="Update Album Artist" Style="{StaticResource ModernCheckBox}" Margin="0,16,0,4"/>
                    <TextBox x:Name="AlbumArtistTextBox" Style="{StaticResource ModernTextBox}"
                            IsEnabled="{Binding ElementName=UpdateAlbumArtistCheck, Path=IsChecked}"/>

                    <!-- Genre -->
                    <CheckBox x:Name="UpdateGenreCheck" Content="Update Genre" Style="{StaticResource ModernCheckBox}" Margin="0,16,0,4"/>
                    <TextBox x:Name="GenreTextBox" Style="{StaticResource ModernTextBox}"
                            IsEnabled="{Binding ElementName=UpdateGenreCheck, Path=IsChecked}"/>

                    <!-- Year -->
                    <CheckBox x:Name="UpdateYearCheck" Content="Update Year" Style="{StaticResource ModernCheckBox}" Margin="0,16,0,4"/>
                    <TextBox x:Name="YearTextBox" Style="{StaticResource ModernTextBox}"
                            IsEnabled="{Binding ElementName=UpdateYearCheck, Path=IsChecked}"/>

                    <!-- Advanced Options -->
                    <TextBlock Text="Advanced Options" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextBrush}"
                              Margin="0,24,0,8"/>

                    <CheckBox x:Name="AutoNumberTracksCheck" Content="Auto-number tracks (1, 2, 3...)" 
                             Style="{StaticResource ModernCheckBox}"/>

                    <CheckBox x:Name="CleanupTagsCheck" Content="Remove empty tags" 
                             Style="{StaticResource ModernCheckBox}"/>

                    <CheckBox x:Name="StandardizeFormatCheck" Content="Standardize tag format" 
                             Style="{StaticResource ModernCheckBox}"/>

                    <!-- Pattern Replacement -->
                    <TextBlock Text="Pattern Replacement" 
                              FontSize="14" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextBrush}"
                              Margin="0,24,0,8"/>

                    <CheckBox x:Name="UsePatternCheck" Content="Use pattern replacement" Style="{StaticResource ModernCheckBox}"/>

                    <Grid IsEnabled="{Binding ElementName=UsePatternCheck, Path=IsChecked}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Find:" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="FindTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <Label Content="Replace with:" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="ReplaceTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- File Selection -->
            <Border Grid.Column="2" 
                    Background="{StaticResource SecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="Files to Update" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextBrush}"
                              Margin="0,0,0,8"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Select All" Click="SelectAll_Click" Style="{StaticResource ModernButton}" FontSize="11" Padding="8,4"/>
                        <Button Content="Select None" Click="SelectNone_Click" Style="{StaticResource ModernButton}" FontSize="11" Padding="8,4"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="FilesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding FileName}" 
                                             IsChecked="True"
                                             Foreground="{StaticResource TextBrush}"
                                             Margin="0,2"
                                             Tag="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Preview Changes" 
                    Click="Preview_Click" 
                    Style="{StaticResource ModernButton}"
                    Background="#FF28A745"/>
            <Button Content="Apply Changes" 
                    Click="Apply_Click" 
                    Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel" 
                    Click="Cancel_Click" 
                    Style="{StaticResource ModernButton}"
                    Background="#FF6C757D"/>
        </StackPanel>
    </Grid>
</Window>
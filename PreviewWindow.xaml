<Window x:Class="TID3.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TID3"
        mc:Ignorable="d"
        Title="Preview Changes" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E"
        d:DesignHeight="500" d:DesignWidth="600">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FF3F3F46"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Preview Changes" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,16"/>

        <!-- Content -->
        <Border Grid.Row="1"
                Background="{StaticResource SecondaryBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12">
            <ScrollViewer Style="{StaticResource ModernScrollViewer}" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="PreviewTextBlock"
                          Foreground="{StaticResource TextBrush}"
                          FontFamily="Consolas"
                          FontSize="12"
                          TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Button -->
        <Button Grid.Row="2" 
                Content="OK" 
                Click="OK_Click" 
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Right"
                Margin="0,16,0,0"/>
    </Grid>
</Window>